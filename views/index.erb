<div class="container">

  <div class="alert-header"><thead>Alerts</thead></div>
  <table>
    <tr>
      <th>Status</th>
      <th>Name</th>
      <th>Count</th>
      <th>Par Level</th>
      <th>Expiration Date</th>
      <th></th>
    </tr>
    <% @alerts.each do |alert_drug| %>
      <tr>
        <td class="status"><div class="status -<%= alert_drug.status %>"></div> <%= alert_drug.status %> </td>
        <td><%= alert_drug.Dname %></td>
        <td><%= alert_drug.count %></td>
        <td><%= alert_drug.par_level %></td>
        <td><%= alert_drug.expiration_date %></td>
        <td><a href="#" class="button-more-info">info</a></td>
      </tr>
    <% end %>
  </table>

  <div class="index-header"><thead>Index</thead></div>
  <table>
    <tr>
      <th>Status</th>
      <th>Name</th>
      <th>Count</th>
      <th>Par Level</th>
      <th>Expiration Date</th>
      <th></th>
    </tr>
    <% @drug_data_points.each_with_index do |drug_data, index| %>
      <tr>
        <td class="status"><div class="status -<%= drug_data.status %>"></div> <%= drug_data.status %> </td>
        <td><%= drug_data.Dname %></td>
        <td><%= drug_data.count %></td>
        <td><%= drug_data.Par_lvl %></td>
        <td><%= drug_data.expiration_date %></td>
        <td><%= chart_link  'info', @location, drug_data.Dname, "chart-#{index}" %></td>
      </tr>
    <% end %>
  </table>

  <%# TODO: pagination, use will_paginate gem

  <div class="footer">
    <a href="#">Next Page ></a>
  </div>

    %>
</div><!-- end of "container" -->