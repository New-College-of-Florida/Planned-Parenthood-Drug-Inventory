<div class="container">

	<table>
		<thead>All Drugs</thead>
		<tr>
			<th>CPT Code</th>
			<th>Name</th>
			<th>Vendor</th>
      <th>Count</th>
      <th>Consumption</th>
    </tr>
		<% for cpt in @drug_data %>
      <tr>
        <td><%= cpt[:code] %></td>
				<td><%= cpt[:name] %></td>
				<td><%= cpt[:vendor] %></td>
				<td><%= cpt[:current_count] %></td>
				<td><a>View</a></td>
      </tr>
    <% end %>
  </table>

  <%# TODO: pagination, use will_paginate gem %>
</div><!-- end of "container" -->
