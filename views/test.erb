<div class="container">

	<table>
		<thead>
			<tr>
				<td>All Drugs</td>
				<td><a id="zero_count_hide">Show/Hide Zero Counts</a></td>
				<td>Select Health Center</td>
			</tr>
		</thead>
		<tr>
			<th>CPT Code</th>
			<th>Name</th>
			<th>Vendor</th>
      <th>Count</th>
      <th>Consumption</th>
    </tr>
		<% for cpt in @drug_data %>
			<tr <% if cpt[:current_count] == 0 then %> class="zero-count" <% end %>>
        <td><%= cpt[:code] %></td>
				<td><%= cpt[:name] %></td>
				<td><%= cpt[:vendor] %></td>
				<td><%= cpt[:current_count] %></td>
				<td><a>View</a></td>
      </tr>
    <% end %>
  </table>

  <%# TODO: pagination, use will_paginate gem %>
</div><!-- end of "container" -->
<script type="text/javascript" src="/js/drugdisplay.js"></script>
