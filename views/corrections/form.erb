<div class="row" style="margin-top:12em;">
  <div class="large-offset-4 large-4 columns">
    <form action="/corrections/submit" method="post" name="corrections">
      <div class="row">

        <div class="large-12 columns <%= error.email? ? 'error' : '' %>">
          <label>Date
            <input type="date" name="date" placeholder="e.g. 12/25/2014" required>
          </label>
          <% if error.date? %> 
            <small class="error">This date doesn't look right.  Are you sure this is correct?</small>
          <% end %>
        </div>

        <div class="large-12 columns <%= error.count? ? 'error' : '' %>">
          <label>Count
            <input type="number" name="count" placeholder="e.g. 50 or -23" required>
          </label>
          <% if error.count? %> 
            <small class="error">This count doesn't look right.  Are you sure this is correct?</small>
          <% end %>
        </div>

        <div class="large-12 columns <%= error.center? ? 'error' : '' %>">
          <label>Health Center
            <select required>
              <option value="" disabled="disabled">Select a Health Center</option>
              <% data['centers'].each do |center| %>
                <option value="<%= center.id %>"><%= center.name %></option>
              <% end %>
            </select>
          </label>
          <% if error.center? %> 
            <small class="error">Please select a health center from this list.</small>
          <% end %>
        </div>

        <div class="large-12 columns <%= error.drug? ? 'error' : '' %>">
          <label>Drug
            <select required>
              <option value="" disabled="disabled">Select a Drug</option>
              <% data['drugs'].each do |center| %>
                <option value="<%= drug.id %>"><%= drug.name %></option>
              <% end %>
            </select>
          </label>
          <% if error.drug? %> 
            <small class="error">Please select a drug from this list.</small>
          <% end %>
        </div>

      </div>
      <div class="row">
        <div class="large-12 columns">
          <button class="button tiny" type="submit">Submit</button>
          <button class="button tiny" type="reset">Reset</button>
        </div>
      </div>
    </form>
  </div>
</div>
